<UserControl x:Class="InterdisciplinairProject.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <!-- Background gradient overlay -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFE6F3FF" Offset="0"/>
                <GradientStop Color="#FFFFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main content -->
        <Grid Margin="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,20">
                <TextBlock Text="ðŸ’¡" 
                           FontSize="72" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="InterdisciplinairProject" 
                           FontSize="42" 
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="Professional DMX Lighting Control Interface" 
                           FontSize="18" 
                           Foreground="#FF666666"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Subtitle -->
            <TextBlock Grid.Row="1"
                       Text="Choose a workspace to get started" 
                       FontSize="16" 
                       Foreground="#FF333333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Feature Cards -->
            <UniformGrid Grid.Row="2" 
                        Columns="3" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="1200">
                
                <!-- Fixture Builder Card -->
                <Border Margin="15" 
                        Background="#FFF8F8F8" 
                        CornerRadius="12"
                        BorderBrush="#FFD0D0D0" 
                        BorderThickness="1"
                        Cursor="Hand"
                        MaxWidth="350"
                        MaxHeight="400">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE8E8E8"/>
                                    <Setter Property="BorderBrush" Value="#FF0078D4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button Command="{Binding DataContext.OpenFixtureBuilderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="30,40">
                        <StackPanel>
                            <TextBlock Text="ðŸ”§" 
                                       FontSize="64" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Fixture Builder" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Create and manage lighting fixtures" 
                                       FontSize="14" 
                                       Foreground="#FF666666"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <Border Background="#FF0078D4" 
                                    CornerRadius="4" 
                                    Padding="10,8"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="Define Fixtures â†’" 
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Scene Builder Card -->
                <Border Margin="15" 
                        Background="#FFF8F8F8" 
                        CornerRadius="12"
                        BorderBrush="#FFD0D0D0" 
                        BorderThickness="1"
                        Cursor="Hand"
                        MaxWidth="350"
                        MaxHeight="400">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE8E8E8"/>
                                    <Setter Property="BorderBrush" Value="#FF0078D4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button Command="{Binding DataContext.OpenSceneBuilderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="30,40">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ­" 
                                       FontSize="64" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Scene Builder" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Design lighting scenes with multiple fixtures" 
                                       FontSize="14" 
                                       Foreground="#FF666666"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <Border Background="#FF0078D4" 
                                    CornerRadius="4" 
                                    Padding="10,8"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="Create Scenes â†’" 
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Show Builder Card -->
                <Border Margin="15" 
                        Background="#FFF8F8F8" 
                        CornerRadius="12"
                        BorderBrush="#FFD0D0D0" 
                        BorderThickness="1"
                        Cursor="Hand"
                        MaxWidth="350"
                        MaxHeight="400">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE8E8E8"/>
                                    <Setter Property="BorderBrush" Value="#FF0078D4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button Command="{Binding DataContext.OpenShowBuilderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="30,40">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ¬" 
                                       FontSize="64" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Show Builder" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Sequence scenes into complete shows" 
                                       FontSize="14" 
                                       Foreground="#FF666666"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <Border Background="#FF0078D4" 
                                    CornerRadius="4" 
                                    Padding="10,8"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="Build Shows â†’" 
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Button>
                </Border>
            </UniformGrid>

            <!-- Footer -->
            <StackPanel Grid.Row="3" 
                       HorizontalAlignment="Center" 
                       Orientation="Horizontal"
                       Margin="0,40,0,20">
                <TextBlock Text="Powered by " 
                           FontSize="12" 
                           Foreground="#FF666666"
                           VerticalAlignment="Center"/>
                <TextBlock Text=".NET 8" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Foreground="#FF333333"
                           VerticalAlignment="Center"
                           Margin="3,0"/>
                <TextBlock Text="â€¢ WPF â€¢ DMX512" 
                           FontSize="12" 
                           Foreground="#FF666666"
                           VerticalAlignment="Center"
                           Margin="3,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
