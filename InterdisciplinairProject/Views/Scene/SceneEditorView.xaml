<UserControl x:Class="InterdisciplinairProject.Views.SceneEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InterdisciplinairProject.Views"
             xmlns:converters="clr-namespace:InterdisciplinairProject.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:FixtureEndAddressConverter x:Key="EndAddressConverter"/>
        
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEBEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
      
        <!-- Header: Scene Name and Edit -->
        <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,20" Margin="0,0,0,20">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="{Binding Scene.Name}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="#333"/>
                    <Button Command="{Binding EditSceneNameCommand}" 
                            Margin="10,0,0,0"
                            ToolTip="Scène naam bewerken"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="4">
                                    <TextBlock Text="✏" FontSize="18" Foreground="#666"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <!-- Preview Scene Button -->
                <Button Command="{Binding PreviewSceneCommand}"
                        Content="▶ Preview Scene"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="16,8"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Stuur de volledige scene naar de DMX controller">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF45A049"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
          
            <!-- Left Column: Fixture List -->
            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header & Add Button -->
                <DockPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Fixtures" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Foreground="#555"/>
                    <Button Content="+ Toevoegen"
                            Command="{Binding AddFixtureCommand}"
                            HorizontalAlignment="Right"
                            Background="#FF2D6CDF"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Padding="12,6"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF1E5BB0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DockPanel>

                <!-- List -->
                <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Background="White">
                    <ListBox x:Name="FixturesListBox"
                             ItemsSource="{Binding SceneFixtures}"
                             SelectedItem="{Binding SelectedFixture}"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="5"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="#E0E0E0"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Margin="0,0,0,8"
                                                    Padding="10">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#E7F1FF"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#0056B3"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#F8F9FA"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Fixture.Name}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="DMX: " FontSize="12" Foreground="#666"/>
                                            <TextBlock Text="{Binding Fixture.StartAddress}" FontSize="12" FontWeight="SemiBold" Foreground="#444"/>
                                            <TextBlock Text=" - " FontSize="12" Foreground="#666"/>
                                            <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#444">
                                                <TextBlock.Text>
                                                    <Binding Path="Fixture" Converter="{StaticResource EndAddressConverter}"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Remove Button -->
                                    <Button Grid.Column="1"
                                            Command="{Binding DataContext.RemoveFixtureCommand, ElementName=FixturesListBox}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonStyle}"
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            ToolTip="Verwijder fixture">
                                        <TextBlock Text="×" FontSize="20" FontWeight="Bold" Foreground="#DC3545" Margin="0,-2,0,0"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>

            <!-- Right Column: Settings -->
            <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Background="White">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>