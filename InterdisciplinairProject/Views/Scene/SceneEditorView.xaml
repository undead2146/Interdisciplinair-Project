<UserControl x:Class="InterdisciplinairProject.Views.SceneEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InterdisciplinairProject.Views"
             xmlns:converters="clr-namespace:InterdisciplinairProject.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:FixtureEndAddressConverter x:Key="EndAddressConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
      
        <!-- Scene naam -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Margin="0,0,0,10">
            <TextBlock Text="Scène Naam:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <TextBox Text="{Binding Scene.Name}"
                     Width="200"
                     Margin="0,0,10,0"
                     IsReadOnly="True"/>
            
            <Button Command="{Binding EditSceneNameCommand}"
                    Padding="8,5"
                    Margin="0,0,10,0"
                    ToolTip="Scène naam bewerken"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <TextBlock Text="✏"
                                       FontSize="16"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
       
        <!-- Fixture toevoegen knop -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Margin="0,0,0,10">
            <Button Content="Fixture Toevoegen"
                    Command="{Binding AddFixtureCommand}"
                    Padding="10,5"/>
        </StackPanel>

        <!-- Hoofd content: Fixture lijst links, settings rechts -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
          
            <!-- Fixture lijst -->
            <Border Grid.Column="0"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,10,0">
                <ListBox ItemsSource="{Binding SceneFixtures}"
                         SelectedItem="{Binding SelectedFixture}"
                         BorderThickness="0"
                         Margin="5"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Fixture Name -->
                                <StackPanel Grid.Column="0"
                                            Orientation="Vertical"
                                            VerticalAlignment="Center"
                                            Margin="5">
                                    <TextBlock Text="{Binding Fixture.Name}"
                                               FontWeight="SemiBold"
                                               FontSize="14"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="DMX: "
                                                   FontSize="11"
                                                   Foreground="Gray"/>
                                        <TextBlock Text="{Binding Fixture.StartAddress}"
                                                   FontSize="11"
                                                   Foreground="Gray"/>
                                        <TextBlock Text=" - "
                                                   FontSize="11"
                                                   Foreground="Gray"/>
                                        <TextBlock FontSize="11"
                                                   Foreground="Gray">
                                            <TextBlock.Text>
                                                <Binding Path="Fixture"
                                                         Converter="{StaticResource EndAddressConverter}"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Remove Button -->
                                <Button Grid.Column="2"
                                        Content="X"
                                        Foreground="Red"
                                        FontWeight="Bold"
                                        Width="20"
                                        Height="20"
                                        Padding="0"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        ToolTip="Verwijder deze fixture"
                                        Command="{Binding DataContext.RemoveFixtureCommand, 
                                                  RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                        CommandParameter="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderThickness="0"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#15000000"/>
                                                    <Setter Property="Foreground" Value="DarkRed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            <!-- Fixture settings view -->
            <Border Grid.Column="1"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                <ContentControl Content="{Binding CurrentView}"
                                Margin="5"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>