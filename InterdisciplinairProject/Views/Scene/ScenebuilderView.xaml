<UserControl x:Class="InterdisciplinairProject.Views.ScenebuilderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Linker kolom met scene lijst -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Nieuwe Scene button -->
            <Button x:Name="NewSceneButton"
                    Grid.Row="0"
                    Content="Nieuwe Scene"
                    FontSize="16"
                    Padding="12,8"
                    HorizontalAlignment="Left"
                    Width="180"
                    Command="{Binding NewSceneCommand}"
                    Background="#FF2D6CDF"
                    Foreground="White"
                    BorderThickness="0"/>

            <!-- Kleine spacer -->
            <Border Grid.Row="1"/>

            <!-- Import Scenes button -->
            <Button x:Name="ImportScenesButton"
                    Grid.Row="2"
                    Content="Import Scenes"
                    FontSize="16"
                    Padding="12,8"
                    HorizontalAlignment="Left"
                    Width="180"
                    Command="{Binding ImportScenesCommand}"
                    Background="#FF4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>

            <!-- Spacer -->
            <Border Grid.Row="3"/>

            <!-- AANGEPAST: ContentControl voor dynamische view (Scene lijst OF Fixture Registry) -->
            <ContentControl Grid.Row="4"
                           Content="{Binding LeftPanelView}"
                           HorizontalAlignment="Left"
                           Width="180"/>
        </Grid>

        <!-- Rechter kolom: hier wordt de SceneEditorView geladen -->
        <ContentControl Grid.Column="2" 
                       Content="{Binding CurrentView}"/>
    </Grid>
</UserControl>