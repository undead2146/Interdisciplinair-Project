<Window x:Class="InterdisciplinairProject.Views.Scene.FixtureRegistryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:InterdisciplinairProject.Fixtures.Models"
        mc:Ignorable="d"
        x:Name="DialogRoot" Title="Fixture Registreren" Height="800" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border CornerRadius="10" Background="#F0F0F0" Padding="15" Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Fixture Name Display -->
                <TextBlock Margin="0,0,0,15" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="16" FontWeight="Bold">
                    <Run Text="Fixture: "/>
                    <Run Text="{Binding SelectedFixture.Name}"/>
                </TextBlock>

                <!-- Name Section -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Padding="5" Height="25" Background="#E0F2FF" BorderBrush="#ADD8E6" BorderThickness="1"/>

                    <Label Content="Start address:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" Height="25" Background="#E0F2FF" BorderBrush="#ADD8E6" BorderThickness="1"/>

                    <Label Content="End Address:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBlock Text="*Set automatically based on channels*" Grid.Row="2" Grid.Column="1" Margin="5,8,5,5" VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic"/>
                </Grid>

                <!-- Effects Section -->
                <TextBlock Text="Effects" FontWeight="Bold" Margin="0,10,0,5"/>

                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="0,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Header Row -->
                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,1" Padding="8,4">
                            <TextBlock Text="Supported effects" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,1" Padding="8,4">
                            <TextBlock Text="Property" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,0,1" Padding="8,4">
                            <TextBlock Text="Value" FontWeight="SemiBold"/>
                        </Border>

                        <!-- Effect Rows -->
                        <ItemsControl Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding EffectRows, ElementName=DialogRoot}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Effect Type -->
                                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,1" Padding="8,4">
                                            <ComboBox SelectedItem="{Binding EffectType}" Margin="0" Padding="5" Height="25" Background="#E0F2FF" BorderBrush="#ADD8E6" BorderThickness="1">
                                                <ComboBoxItem Content="Fade-in"/>
                                                <ComboBoxItem Content="Flash"/>
                                                <ComboBoxItem Content="Strobe"/>
                                            </ComboBox>
                                        </Border>
                                        <!-- Property Labels -->
                                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,1" Padding="8,4">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" Text="Min" Margin="0,5,0,13"/>
                                                <TextBlock Grid.Row="1" Text="Max" Margin="0,0,0,13"/>
                                                <TextBlock Grid.Row="2" Text="Time" Margin="0,0,0,13"/>
                                                <TextBlock Grid.Row="3" Text="Channel"/>
                                            </Grid>
                                        </Border>
                                        <!-- Value Inputs -->
                                        <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,0,1" Padding="8,4">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBox Grid.Row="0" Text="{Binding Min}" Margin="0,0,0,5" Padding="5" Height="25" Background="#E0F2FF" BorderBrush="#ADD8E6" BorderThickness="1"/>
                                                <TextBox Grid.Row="1" Text="{Binding Max}" Margin="0,0,0,5" Padding="5" Height="25" Background="#E0F2FF" BorderBrush="#ADD8E6" BorderThickness="1"/>
                                                <TextBox Grid.Row="2" Text="{Binding Time}" Margin="0,0,0,5" Padding="5" Height="25" Background="#E0F2FF" BorderBrush="#ADD8E6" BorderThickness="1"/>
                                                <ComboBox Grid.Row="3"
                                                          ItemsSource="{Binding DataContext.SelectedFixture.Channels, ElementName=DialogRoot}"
                                                          SelectedItem="{Binding Channel}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Name}"/>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Grid>
                </Border>

                <!-- Save and Cancel Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="+ Add effect" Width="110" Height="35" Margin="0,0,10,0" Foreground="#6A0DAD" FontWeight="SemiBold" Cursor="Hand" Padding="5,10" Click="AddEffectRow"/>
                    <Button Content="Save" Width="80" Height="35" Margin="0,0,10,0"/>
                    <Button Content="Cancel" Width="80" Height="35" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
