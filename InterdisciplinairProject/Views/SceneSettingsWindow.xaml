<Window x:Class="InterdisciplinairProject.Views.SceneSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scene Settings"
        Width="360"
        Height="260"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock Text="Scene ID" FontWeight="SemiBold"/>
            <TextBox Text="{Binding SceneModel.Id, Mode=OneWay}" IsReadOnly="True" />

            <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <!-- Make Name read-only so it cannot be changed in this dialog -->
            <TextBox Text="{Binding SceneModel.Name, Mode=OneWay}" IsReadOnly="True" />

            <TextBlock Text="Fade In Time (ms)" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <TextBox Text="{Binding FadeInMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Fade Out Time (ms)" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <TextBox Text="{Binding FadeOutMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,12,0,0">
            <Button Content="Close" Width="80" Margin="8,0,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
