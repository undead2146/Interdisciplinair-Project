<Window x:Class="InterdisciplinairProject.Views.ImportFixturesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:InterdisciplinairProject.Converters"
        Title="Fixtures Importeren" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:HexColorConverter x:Key="HexColorConverter"/>
        <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVis"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸ  Fixture Browser" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock Text="Selecteer fixtures om toe te voegen aan je scene" 
                          FontSize="14" 
                          Foreground="#BDC3C7"
                          Margin="0,5,0,0"/>
                <TextBlock Text="{Binding CurrentSceneName, StringFormat='Scene: {0}'}"
                           FontSize="13"
                           Foreground="#BDC3C7"
                           Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Search and Filter Bar -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            Padding="10,8"
                            FontSize="14"
                            VerticalContentAlignment="Center"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"/>
                    <TextBlock Text="ðŸ” Zoek fixtures op naam, fabrikant, of kanaaltype..."
                              IsHitTestVisible="False"
                              Foreground="#95A5A6"
                              Padding="12,10"
                              FontSize="14"
                              VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Filter Type -->
                <TextBlock Grid.Column="1" 
                          Text="Filter:" 
                          VerticalAlignment="Center"
                          Margin="15,0,10,0"
                          FontSize="14"
                          Foreground="#34495E"/>
                <ComboBox Grid.Column="2"
                         ItemsSource="{Binding FilterTypes}"
                         SelectedItem="{Binding SelectedFilterType}"
                         Padding="10,8"
                         FontSize="14"
                         BorderBrush="#BDC3C7"/>

                <!-- Import Button -->
                <Button Grid.Column="3"
                       Content="ðŸ“ Importeer uit bestand"
                       Command="{Binding ImportFromFileCommand}"
                       Background="#3498DB"
                       Foreground="White"
                       Padding="15,8"
                       Margin="15,0,0,0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="4"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Fixture List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" Background="#ECF0F1" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <TextBlock Text="ðŸ“‹ Beschikbare Fixtures" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50"/>
                    </Border>

                    <!-- Fixture List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding FilteredFixtures}"
                             SelectedItem="{Binding SelectedFixture, Mode=TwoWay}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Background="Transparent">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F8F9FA"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Margin="10,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Checkbox (larger for better usability) -->
                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected}"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 Width="48"
                                                 Height="48"
                                                 Padding="12"
                                                 Margin="6,0,12,0"
                                                 ToolTip="Select fixture"
                                                 FontSize="24">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="CheckBox">
                                                                <Grid Background="Transparent">
                                                                    <Border x:Name="CheckBoxBorder"
                                                                            Width="{TemplateBinding Width}"
                                                                            Height="{TemplateBinding Height}"
                                                                            Background="#F8F9FA"
                                                                            BorderBrush="#BDC3C7"
                                                                            BorderThickness="2"
                                                                            CornerRadius="8"
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Center">
                                                                        <Path x:Name="CheckMark"
                                                                              Data="M0,10 L4,14 L16,0"
                                                                              Stroke="White"
                                                                              StrokeThickness="3"
                                                                              StrokeStartLineCap="Round"
                                                                              StrokeEndLineCap="Round"
                                                                              StrokeLineJoin="Round"
                                                                              Fill="Transparent"
                                                                              Visibility="Collapsed"
                                                                              HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                                            <Path.RenderTransform>
                                                                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                                                            </Path.RenderTransform>
                                                                        </Path>
                                                                    </Border>
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsChecked" Value="True">
                                                                        <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                                        <Setter TargetName="CheckBoxBorder" Property="Background" Value="#27AE60"/>
                                                                        <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#27AE60"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="CheckBoxBorder" Property="Background" Value="#E3F2FD"/>
                                                                        <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#2196F3"/>
                                                                    </Trigger>
                                                                    <MultiTrigger>
                                                                        <MultiTrigger.Conditions>
                                                                            <Condition Property="IsChecked" Value="True"/>
                                                                            <Condition Property="IsMouseOver" Value="True"/>
                                                                        </MultiTrigger.Conditions>
                                                                        <Setter TargetName="CheckBoxBorder" Property="Background" Value="#4CAF50"/>
                                                                        <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#4CAF50"/>
                                                                    </MultiTrigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>

                                        <!-- Fixture Info -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="14" 
                                                      FontWeight="SemiBold"
                                                      Foreground="#2C3E50"/>
                                            <TextBlock Text="{Binding Manufacturer}" 
                                                      FontSize="12" 
                                                      Foreground="#7F8C8D"
                                                      Margin="0,2,0,0"
                                                      Visibility="{Binding Manufacturer, Converter={StaticResource StringNotEmptyToVis}}"/>
                                            <TextBlock FontSize="12" Foreground="#95A5A6" Margin="0,4,0,0">
                                                <Run Text="ðŸ“Š"/>
                                                <Run Text="{Binding ChannelCount, Mode=OneWay, StringFormat='{}{0} channels'}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding ComplexityWarning}"
                                                      FontSize="11"
                                                      Foreground="#E74C3C"
                                                      FontWeight="SemiBold"
                                                      Margin="0,4,0,0"
                                                      Visibility="{Binding IsComplex, Converter={StaticResource BoolToVis}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Loading Overlay -->
                    <Grid Grid.Row="1" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center"/>
                            <TextBlock Text="â³ Fixtures laden..." 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,10,0,0"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Details Header -->
                    <Border Grid.Row="0" Background="#ECF0F1" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <TextBlock Text="ðŸ” Fixture Details" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50"/>
                    </Border>

                    <!-- Details Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                        <StackPanel>
                            <!-- Show message when no fixture selected -->
                            <TextBlock Text="Selecteer een fixture om details te bekijken"
                                      FontSize="14"
                                      Foreground="#95A5A6"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="0,50,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedFixture}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Fixture Details when selected -->
                            <StackPanel DataContext="{Binding SelectedFixture}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <!-- Name -->
                                <TextBlock Text="{Binding Name}" 
                                          FontSize="20" 
                                          FontWeight="Bold"
                                          Foreground="#2C3E50"
                                          TextWrapping="Wrap"/>

                                <!-- Manufacturer -->
                                <TextBlock Text="{Binding Manufacturer}" 
                                          FontSize="14" 
                                          Foreground="#7F8C8D"
                                          Margin="0,5,0,0"/>

                                <!-- Description -->
                                <TextBlock Text="{Binding Description}" 
                                          FontSize="13" 
                                          Foreground="#34495E"
                                          TextWrapping="Wrap"
                                          Margin="0,10,0,0"
                                          Visibility="{Binding Description, Converter={StaticResource StringNotEmptyToVis}}"/>

                                <Separator Margin="0,15"/>

                                <!-- Channel Info -->
                                <TextBlock FontSize="14" Foreground="#2C3E50" Margin="0,0,0,10">
                                    <Run Text="Totaal aantal kanalen:"/>
                                    <Run Text="{Binding ChannelCount, Mode=OneWay}" FontWeight="Bold"/>
                                </TextBlock>

                                <!-- Channel List -->
                                <TextBlock Text="Kanaal configuratie:" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          Foreground="#2C3E50"
                                          Margin="0,0,0,10"/>

                                <ItemsControl ItemsSource="{Binding Channels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F9FA" 
                                                   Padding="10,8" 
                                                   Margin="0,0,0,5"
                                                   CornerRadius="3"
                                                   BorderBrush="#E0E0E0"
                                                   BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Channel Symbol -->
                                                    <Border Grid.Column="0"
                                                           Background="{Binding ColorHex, Converter={StaticResource HexColorConverter}}"
                                                           Width="40"
                                                           Height="40"
                                                           CornerRadius="20"
                                                           Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding Symbol}"
                                                                  FontSize="20"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="White"/>
                                                    </Border>

                                                    <!-- Channel Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding FormattedInfo}" 
                                                                  FontSize="13"
                                                                  FontWeight="SemiBold"
                                                                  Foreground="#2C3E50"/>
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                  FontSize="11"
                                                                  Foreground="#7F8C8D"
                                                                  Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}"
                          VerticalAlignment="Center"
                          FontSize="13"
                          Foreground="#7F8C8D"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Geselecteerde Toevoegen"
                            Command="{Binding AddSelectedFixturesCommand}"
                            Background="#27AE60"
                            Foreground="White"
                            Padding="20,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="4"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Annuleren"
                            Click="CancelButton_Click"
                            Background="#95A5A6"
                            Foreground="White"
                            Padding="20,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="4"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
