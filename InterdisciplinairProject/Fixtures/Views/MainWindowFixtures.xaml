<UserControl x:Class="InterdisciplinairProject.Fixtures.Views.MainWindowFixtures"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InterdisciplinairProject.Fixtures.Views"
             xmlns:vm="clr-namespace:InterdisciplinairProject.Fixtures.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- ViewModel to View mappings -->
        <DataTemplate DataType="{x:Type vm:FixtureListViewModel}">
            <local:FixtureListView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:FixtureCreateViewModel}">
            <local:FixtureCreateView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:FixtureContentViewModel}">
            <local:FixtureContentView />
        </DataTemplate>
    </UserControl.Resources>


    <Grid>
        <!-- Toolbar -->
        <Border Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,0,0,1" VerticalAlignment="Top" Height="50">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <Button Content="Create Fixture"
                        Command="{Binding CreateFixtureCommand}"
                        Margin="0,0,10,0"
                        Padding="10,5"/>
                <Button Content="Import Fixture"
                        Command="{Binding ImportFixtureCommand}"
                        Margin="0,0,10,0"
                        Padding="10,5"/>
                <Button Content="Export Fixture"
                        Command="{Binding ExportFixtureCommand}"
                        Margin="0,0,10,0"
                        Padding="10,5"
                        IsEnabled="{Binding SelectedFixture, TargetNullValue=False}"/>
                <Button Content="Delete Fixture"
                        Command="{Binding DeleteCommand}"
                        Margin="0,0,10,0"
                        Padding="10,5"
                        Background="#E57373"
                        Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Content="{Binding CurrentViewModel}"
                       Margin="0,50,0,0"/>
    </Grid>
</UserControl>
