<UserControl x:Class="InterdisciplinairProject.Fixtures.Views.FixtureListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:InterdisciplinairProject.Fixtures.ViewModels"
             xmlns:converters="clr-namespace:InterdisciplinairProject.Fixtures.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SEARCH BAR + DELETE BUTTON -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0"
                      Width="120"
                      ItemsSource="{Binding SearchModes}"
                      SelectedItem="{Binding SelectedSearchMode}"
                      Margin="0,0,8,0"/>

            <TextBox Grid.Column="1"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Padding="4"
                     Height="28"
                     VerticalAlignment="Center"
                     Margin="0,0,8,0"/>

            <Button Grid.Column="2"
                    Content="Delete"
                    Width="70"
                    Height="28"
                    Background="#d9534f"
                    Foreground="White"
                    Command="{Binding DeleteFixtureCommand}"
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- MAIN CONTENT -->
        <Border Grid.Row="1" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ManufacturerGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding Manufacturer}"
                                      IsExpanded="True"
                                      Visibility="{Binding IsVisible, Converter={StaticResource BoolToVis}}"
                                      Margin="0,0,0,8">

                                <Expander.HeaderTemplate>
                                    <DataTemplate>
                                        <Border Padding="8" Background="#EEE" CornerRadius="6">
                                            <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="16"/>
                                        </Border>
                                    </DataTemplate>
                                </Expander.HeaderTemplate>

                                <!-- SINGLE SELECTION LISTBOX -->
                                <ListBox ItemsSource="{Binding FilteredFixtures}"
                                         SelectedItem="{Binding DataContext.SelectedFixture, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                         SelectionMode="Single"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         PreviewMouseWheel="ListBox_PreviewMouseWheel">

                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>

                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="LightGray"
                                                    BorderThickness="1"
                                                    Padding="8"
                                                    Margin="4"
                                                    Background="White"
                                                    CornerRadius="4"
                                                    Width="190">
                                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                    <Image Source="{Binding ImageBase64, Converter={StaticResource Base64ToImageConverter}}"
                                                           Height="80"
                                                           Stretch="Uniform"
                                                           Margin="0,0,0,6"/>
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>

                                </ListBox>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
