<UserControl x:Class="InterdisciplinairProject.Fixtures.Views.FixtureCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterdisciplinairProject.Fixtures.Views"
             xmlns:viewmodels="clr-namespace:InterdisciplinairProject.Fixtures.ViewModels" 
             xmlns:converters="clr-namespace:InterdisciplinairProject.Fixtures.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewmodels:FixtureCreateViewModel}">
    <UserControl.Resources>
        <converters:Base64ToImageConverter  x:Key="Base64ToImageC"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityC"/>
        <converters:ChannelIndexPlusOneConverter x:Key="ChannelIndexPlusOneConverter"/>

        <Style x:Key="WatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <!-- real textbox content -->
                                <ScrollViewer x:Name="PART_ContentHost" />

                                <!-- watermark -->
                                <TextBlock x:Name="Watermark"
                                           Text="{TemplateBinding Tag}"
                                           Margin="4,2,0,0"
                                           Foreground="Gray"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark"
                                        Property="Visibility"
                                        Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" /> 
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- LINKER BLOK: Naam + Manufacturer -->
            <Border Grid.Column="0" Padding="12" Background="#f5f5f5" CornerRadius="6" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Fixture name:" FontWeight="Bold"/>
                    <TextBox Text="{Binding FixtureName, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" Margin="0,4,0,12" Padding="3" HorizontalAlignment="Left"/>

                    <TextBlock Text="Manufacturer:" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <ComboBox ItemsSource="{Binding AvailableManufacturers}"
                                  SelectedItem="{Binding SelectedManufacturer, Mode=TwoWay}"
                                  Width="180" Padding="3"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Middel BLOK: Manufacturer + aanmaken -->
            <Border Grid.Column="1" Padding="12" Background="#f5f5f5" CornerRadius="6" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Register new manufacturer:" FontWeight="Bold"/>
                    <StackPanel Margin="15">
                        <TextBox Text="{Binding NewManufacturerName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Add" 
                                    Command="{Binding RegisterManufacturerCommand}"
                                    Width="100" 
                                    Margin="0,0,8,0"
                                    IsDefault="True"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- RECHTER BLOK: Afbeelding -->
            <Border Grid.Column="2" Padding="12" Background="#f5f5f5" CornerRadius="6">
                <Grid>
                    <Image x:Name="FixturePreview"
                           Source="{Binding ImageBase64, Converter={StaticResource Base64ToImageC}}"
                           Height="140"
                           Width="140"
                           Stretch="Uniform"
                           Visibility="{Binding ImageBase64, Converter={StaticResource NullToVisibilityC}}"
                           Cursor="Hand">
                        <Image.InputBindings>
                            <MouseBinding MouseAction="LeftClick"
                                          Command="{Binding AddImageCommand}" />
                        </Image.InputBindings>
                    </Image>

                    <Button x:Name="AddImageButton"
                            Content="Add Image"
                            Command="{Binding AddImageCommand}"
                            Background="#77DD11"
                            Foreground="White"
                            Padding="6,3"
                            FontWeight="Bold"
                            Visibility="{Binding ImageBase64, Converter={StaticResource NullToVisibilityC}, ConverterParameter=Invert}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Button Content="+ Add channel"
			        Padding="10"
			        Margin="0,0,0,10"
			        Command="{Binding AddChannelCommand}"
			        Background="#1E90FF"
			        Foreground="White"
			        FontWeight="Bold"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,12,0,0">
            <ListBox x:Name="ChannelsListBox"
                     HorizontalAlignment="Stretch"
				     Grid.Row="0"
				     ItemsSource="{Binding Channels}"
				     SelectedItem="{Binding SelectedChannel, Mode=TwoWay}"
                     AlternationCount="512"
				     SelectionChanged="ChannelsListBox_SelectionChanged"
				     MouseDoubleClick="ChannelsListBox_MouseDoubleClick"
				     Margin="0"
				     AllowDrop="True"
				     PreviewMouseLeftButtonDown="ChannelsListBox_PreviewMouseLeftButtonDown"
				     PreviewMouseMove="ChannelsListBox_PreviewMouseMove"
				     Drop="ChannelsListBox_Drop"
				     DragOver="ChannelsListBox_DragOver"
                     ScrollViewer.CanContentScroll="True"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.Resources>
                    <Style x:Key="EditingTextBoxStyle" TargetType="TextBox">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                </ListBox.Resources>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="8" Margin="8" Background="White" CornerRadius="3">
                            <StackPanel>

                                <Border x:Name="DragBorder"
                                        Cursor="SizeAll"
                                        Background="Transparent"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="4">
                                    <Grid x:Name="ChannelHeader" Cursor="SizeAll">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Path Grid.Column="0"
                                          Data="M2,3 L4,3 L4,5 L2,5 Z 
                                                M6,3 L8,3 L8,5 L6,5 Z
                                                M2,7 L4,7 L4,9 L2,9 Z 
                                                M6,7 L8,7 L8,9 L6,9 Z
                                                M2,11 L4,11 L4,13 L2,13 Z 
                                                M6,11 L8,11 L8,13 L6,13 Z"
                                          Fill="Gray"
                                          Width="10" Height="16"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"
                                          Cursor="SizeAll"/>
                                    <TextBox x:Name="EditTextBox"
										     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
										     Visibility="Collapsed"
										     Grid.Column="1"
										     Style="{StaticResource EditingTextBoxStyle}"
										     KeyDown="EditTextBox_KeyDown"
										     FocusManager.IsFocusScope="True"/>

                                    <StackPanel x:Name="DisplayPanel" Orientation="Horizontal" Grid.Column="1">
                                        <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBoxItem}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource ChannelIndexPlusOneConverter}}"
                                                   FontWeight="Bold"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                                </Border>

                                <Border x:Name="OptionsPanel"
									    Visibility="Visible"
									    Margin="0,6,0,0"
									    Padding="6"
									    Background="#F5F7FB"
									    CornerRadius="4"
									    BorderBrush="#D0D0D0"
									    BorderThickness="1">
                                    <TabControl HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Margin="10"
                                                TabStripPlacement="Top"
                                                Height="250"
                                                Width="200">
                                        <!-- TabItem range -->
                                        <TabItem Header="Channel">
                                            <Grid Margin="4">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                                                    <TextBlock Text="Select Channel Type:" 
                                                               FontWeight="SemiBold" Margin="0,0,0,4"/>

                                                    <ComboBox ItemsSource="{Binding AvailableTypes}"
                                                              SelectedItem="{Binding SelectedType, Mode=TwoWay}"
                                                              Width="Auto"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>

                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding TypeMinValue, Mode=TwoWay}">min</TextBlock>
                                                        <TextBlock TextAlignment="Right" Grid.Column="1" Text="{Binding TypeMaxValue, Mode=TwoWay}">max</TextBlock>
                                                    </Grid>


                                                </StackPanel>

                                                <StackPanel 
                                                    Name="CustomTypePanel"
                                                    Grid.Row="1">
                                                <Border Grid.Row="1"
                                                        Background="LightGreen"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Padding="10,1,10,10"
                                                        Width="150"
                                                        CornerRadius="6"
                                                        BorderBrush="DarkGreen"
                                                        BorderThickness="1">
                                                    <StackPanel Orientation="Vertical">

                                                        <TextBlock Text="New type name:" Margin="0,0,0,2"/>
                                                        <TextBox Text="{Binding CustomTypeName, Mode=TwoWay}"
                                                                 Padding="4"
                                                                 Width="180"/>
                                                        <!--<TextBlock Text="Enter Type Range:" Margin="0,0,0,2"/>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="1*"/>
                                                                <ColumnDefinition Width="1*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBox Grid.Column="0"
                                                                     Text="{Binding CustomRangeMinValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                     Padding="4"
                                                                     Margin="0,0,6,0"
                                                                     Style="{StaticResource WatermarkTextBoxStyle}"
                                                                     Tag="min"
                                                                     PreviewTextInput="NumericOnly"
                                                                     PreviewKeyDown="BlockSpace"
                                                                     MinWidth="60"
                                                                     MaxWidth="90"
                                                                     HorizontalAlignment="Stretch"
                                                             TextWrapping="NoWrap"/>
                                                            <TextBox Grid.Column="1"
                                                                     Text="{Binding CustomRangeMaxValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                     Padding="4"
                                                                     Style="{StaticResource WatermarkTextBoxStyle}"
                                                                     Tag="max"
                                                                     PreviewTextInput="NumericOnly"
                                                                     PreviewKeyDown="BlockSpace"
                                                                     MinWidth="60"
                                                                     MaxWidth="90"
                                                                     HorizontalAlignment="Stretch"
                                                                     TextWrapping="NoWrap"/>
                                                        </Grid>-->

                                                        <Button Content="Save"
                                                                Margin="0,10,0,0"
                                                                Padding="0,4"
                                                                Command="{Binding AddCustomTypeCommand}"
                                                                CommandParameter="{Binding .}"/>
                                                    </StackPanel>

                                                </Border>
                                                </StackPanel>
                                            </Grid>
                                        </TabItem>
                                        <!-- TabItem range -->
                                        <TabItem Header="Range">
                                            <TabItem.Style>
                                                <Style TargetType="TabItem">
                                                    <Setter Property="IsEnabled" Value="True" />
                                                    <Style.Triggers>
                                                        <!-- Disable when placeholder type is selected -->
                                                        <DataTrigger Binding="{Binding SelectedType}" Value="Select a type">
                                                            <Setter Property="IsEnabled" Value="False" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedType}" Value="Custom">
                                                            <Setter Property="IsEnabled" Value="False" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TabItem.Style>
                                            <Grid Margin="10">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Button Grid.Row="0"
                                                        Content="+ Add Range"
                                                        Padding="6,4"
                                                        Margin="0,0,0,10"
                                                        Command="{Binding AddRangeCommand}" />
                                                <ListBox Grid.Row="1"
                                                         ItemsSource="{Binding Ranges}"
                                                         SelectedItem="{Binding SelectedRange, Mode=TwoWay}"
                                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="4">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBox Grid.Column="0"
                                                                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                         FontWeight="SemiBold"
                                                                         VerticalAlignment="Center"
                                                                         Margin="0,0,10,0"/>

                                                                <StackPanel Grid.Column="1"
                                                                            Orientation="Horizontal"
                                                                            HorizontalAlignment="Stretch"
                                                                            VerticalAlignment="Center">
                                                                    <TextBox Text="{Binding MinR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                             Width="40"
                                                                             HorizontalAlignment="Left"
                                                                             VerticalAlignment="Center"/>
                                                                    <TextBlock Text=" - "
                                                                               VerticalAlignment="Center"
                                                                               Margin="5,0"/>
                                                                    <TextBox Text="{Binding MaxR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                             Width="40"
                                                                             HorizontalAlignment="Left"
                                                                             VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Grid>
                                        </TabItem>
                                        <!-- TabItem effect type -->
                                        <TabItem Header="Effects">
                                            <Grid Margin="10">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Button Grid.Row="0"
                                                        Content="+ Add Effect"
                                                        Padding="6,4"
                                                        Margin="0,0,0,10"
                                                        Command="{Binding AddEffectCommand}" />
                                                <ListBox Grid.Row="1"
                                                         ItemsSource="{Binding Effects}"
                                                         SelectedItem="{Binding SelectedEffect, Mode=TwoWay}"
                                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="4">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <ComboBox Grid.Column="0"
                                                                          ItemsSource="{Binding DataContext.AvailableEffects, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                                          SelectedItem="{Binding EffectType, Mode=TwoWay}"
                                                                          VerticalAlignment="Center"
                                                                          Margin="0,0,8,0"/>

                                                                <Button Grid.Column="1"
                                                                        Content="🗑"
                                                                        Command="{Binding DataContext.DeleteEffectCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                                        CommandParameter="{Binding}"
                                                                        VerticalAlignment="Center"
                                                                        HorizontalAlignment="Right"
                                                                        Width="30"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Grid>
                                        </TabItem>
                                    </TabControl>
                                </Border>

                                <Button x:Name="DeleteButton"
										Grid.Column="1"
										Content="Delete"
										Padding="6,2"
										Margin="0,10,0,10"
										Visibility="Visible"
										Command="{Binding DataContext.DeleteChannelCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
										CommandParameter="{Binding .}"/>
                            </StackPanel>
                        </Border>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                <Setter TargetName="DisplayPanel" Property="Visibility" Value="Collapsed" />
                                
                                <Setter TargetName="EditTextBox" Property="Visibility" Value="Visible" />
                                <Setter TargetName="EditTextBox" Property="FocusManager.FocusedElement" Value="{Binding ElementName=EditTextBox}" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                <Setter TargetName="OptionsPanel" Property="Visibility" Value="Visible" />
                                <Setter TargetName="DeleteButton" Property="Visibility" Value="Visible" />
                                
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsCustomType}" Value="True">
                                <Setter TargetName="CustomTypePanel" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsCustomType}" Value="False">
                                <Setter TargetName="CustomTypePanel" Property="Visibility" Value="Collapsed" />
                            </DataTrigger>

                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Grid.Row="3" Margin="0,12,0,0">
            <StackPanel Grid.Row="1"
					    Orientation="Horizontal"
					    HorizontalAlignment="Right"
					    Margin="0,8,0,0">
                <Button Content="Save"
					    Width="90" Height="36" Margin="0,0,8,0"
					    Command="{Binding SaveCommand}"/>
                <Button Content="Cancel"
					    Width="90" Height="36"
					    Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
