<UserControl x:Class="InterdisciplinairProject.Fixtures.Views.FixtureContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterdisciplinairProject.Fixtures.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER: terug knop + Title -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <Button x:Name="BackButton"
                    Content="← Terug"
                    Width="80"
                    Height="28"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"/>
            <TextBlock Text="{Binding Name}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </DockPanel>

        <!-- MAIN CONTENT: Fixture details -->
        <Border Grid.Row="1" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- General info -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,12">
                        <TextBlock Text="Fixture naam" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Name}" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>
                    <TextBlock Text="{Binding Channels.Count, StringFormat='Aantal kanalen: {0}'}" 
           FontWeight="Bold" Margin="0,0,0,10"/>
                    <!-- Channels header -->
                    <TextBlock Text="Kanalen" FontWeight="Bold" Margin="0,6,0,6"/>

                    <!-- Channels list -->
                    <ItemsControl ItemsSource="{Binding Channels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="0,0,0,8" Background="#FAFAFA" BorderBrush="#EEE" BorderThickness="1" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Type}" FontStyle="Italic" FontSize="12" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="{Binding Value}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- FOOTER: Edit knop -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Button x:Name="EditButton"
                    Content="Bewerk"
                    Width="90"
                    Height="32"
                    HorizontalAlignment="Right"
                    Command="{Binding EditCommand}"/>
        </Grid>
    </Grid>
</UserControl>
