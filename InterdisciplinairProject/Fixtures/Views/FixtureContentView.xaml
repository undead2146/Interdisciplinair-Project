<UserControl x:Class="InterdisciplinairProject.Fixtures.Views.FixtureContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterdisciplinairProject.Fixtures.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER: terug knop + Title -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <Button x:Name="BackButton"
                    Content="Back"
                    Width="80"
                    Height="28"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"/>
            <TextBlock Text="{Binding Name}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </DockPanel>

        <!-- MAIN CONTENT: Fixture details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- LINKER BLOKJE: Fixture Info -->
            <Border Grid.Column="0" Padding="12" Margin="0,0,12,0" Background="#f5f5f5" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Fixture name" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Name}" FontSize="14" Margin="0,4,0,12"/>
                    <TextBlock Text="Manufacturer" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Manufacturer}" FontSize="14" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- RECHTER BLOKJE: Compoort + Knop -->
            <Border Grid.Column="1" Padding="12" Background="LightBlue" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Compoort" FontWeight="Bold"/>
                    <TextBox Width="150" Margin="0,4,0,12" Text="{Binding ComPort, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Width="120" Content="Test Alles" Command="{Binding TestAllCommand}" />
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Border Grid.Row="1" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Channels header -->
                        <TextBlock Text="Channels" FontWeight="Bold" Margin="0,6,0,6"/>

                        <!-- Channels list -->
                        <ItemsControl ItemsSource="{Binding Channels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="0,0,0,8" Background="#FAFAFA" BorderBrush="#EEE" BorderThickness="1" CornerRadius="4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Type}" FontStyle="Italic" FontSize="12" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <TextBox x:Name="valueTextbox" 
                                                 Width="90"
                                                 Height="32"
                                                 Text="{Binding Parameter, UpdateSourceTrigger=PropertyChanged}"/>

                                            <Button x:Name="testButton"
                                                Content="Test"
                                                Width="90"
                                                Height="32"
                                                HorizontalAlignment="Right"
                                                Command="{Binding TestCommand}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- FOOTER: Edit knop -->
        <Grid Grid.Row="3" Margin="0,8,0,0">
            <Button x:Name="EditButton"
                    Content="Edit"
                    Width="90"
                    Height="32"
                    HorizontalAlignment="Right"
                    Command="{Binding EditCommand}"/>
            <Button Content="Delete" 
                    Command="{Binding DeleteCommand}" 
                    Background="#E57373" 
                    Foreground="White" 
                    Width="100"/>
        </Grid>
    </Grid>
</UserControl>
