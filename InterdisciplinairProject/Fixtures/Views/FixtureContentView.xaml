<UserControl x:Class="InterdisciplinairProject.Fixtures.Views.FixtureContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterdisciplinairProject.Fixtures.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <Button x:Name="BackButton"
                    Content="Back"
                    Width="80"
                    Height="28"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"/>
        </DockPanel>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Fixture Info -->
            <Border Grid.Column="0" Padding="12" Margin="0,0,12,0" Background="#f5f5f5" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Fixture name:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Name}" FontSize="14" Margin="0,4,0,12"/>
                    <TextBlock Text="Manufacturer:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Manufacturer}" FontSize="14" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- GREEN BOX → NOW IN THE MIDDLE -->
            <Border Grid.Column="1" Padding="12" Margin="0,0,12,0" Background="LightGreen" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Switch Lamp Method:" FontWeight="Bold"/>
                    <ComboBox Width="150" Margin="0,4,0,12"
                              ItemsSource="{Binding LampMethods}"
                              SelectedItem="{Binding SelectedMethod}" />
                </StackPanel>
            </Border>

            <!-- BLUE BOX → NOW ON THE RIGHT -->
            <Border Grid.Column="2" Padding="12" Background="LightBlue" CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="COM-port:" FontWeight="Bold"/>
                    <ComboBox Width="150" Margin="0,4,0,12"
                              ItemsSource="{Binding AvailablePorts}"
                              SelectedItem="{Binding ComPort, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Width="120" Content="Test All" Command="{Binding TestAllCommand}" />
                </StackPanel>
            </Border>

        </Grid>

        <!-- CHANNEL LIST -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Border Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Channels:" FontWeight="Bold" Margin="0,6,0,6"/>

                        <ItemsControl ItemsSource="{Binding Channels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="0,0,0,8"
                                            Background="#FAFAFA"
                                            BorderBrush="#EEE"
                                            BorderThickness="1"
                                            CornerRadius="4">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- CHANNEL INFO -->
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Type}"
                                                           FontStyle="Italic"
                                                           FontSize="12"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- PARAMETER INPUT -->
                                            <TextBox Grid.Column="1"
                                                     Width="90"
                                                     Height="32"
                                                     Margin="6,0,6,0"
                                                     Text="{Binding Parameter, UpdateSourceTrigger=PropertyChanged}"/>

                                            <!-- TEST BUTTON -->
                                            <Button Grid.Column="2"
                                                    Content="Test"
                                                    Width="90"
                                                    Height="32"
                                                    Command="{Binding TestCommand}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <Grid Grid.Row="3" Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="EditButton"
                        Content="Edit"
                        Width="90"
                        Height="32"
                        Margin="0,0,10,0"
                        Command="{Binding EditCommand}"/>

                <Button Content="Delete" 
                        Command="{Binding DeleteCommand}" 
                        Background="#E57373" 
                        Foreground="White" 
                        Width="100"
                        Height="32"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
